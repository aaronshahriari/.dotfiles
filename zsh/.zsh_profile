export XDG_CONFIG_HOME=$HOME/.config
export PATH="$HOME/.local/bin/scripts/:$PATH"
export SHELL=/usr/bin/zsh

alias vim="nvim"
alias gs="git status"

set -o vi

LS_COLORS+=':ow=01;33'

# tmux sessionizer
bindkey -s ^f "$HOME/.local/bin/scripts/tmux-sessionizer.sh\n"
bindkey -s ^a "source $HOME/.local/bin/scripts/sf-sessionizer.sh\n"

if [[ "$PROMPT_SUFFIX" == "(nix)" ]]; then
  PROMPT="%F{green}NIX%f $PROMPT"
fi

