{
    "cpu": {
        "interval": 5,
        "format": "<span foreground='#5a90db'></span> {usage}%",
        "markup": "pango",
        "states": {
            "warning": 80,
            "critical": 95
        }
    },
    "memory#ram": {
        "interval": 5,
        "format": "<span foreground='#5a90db'></span> {percentage}%",
        "markup": "pango",
        "states": {
            "warning": 80,
            "critical": 95
        },
        "tooltip": "{}",
        "tooltip-format":"{used}/{total} GiB"
    },
    "disk":{
        "interval": 10,
        "format": "<span foreground='#5a90db'></span> {free}",
        "markup": "pango",
        "states": {
            "warning": 50,
            "critical": 75
        },
        "tooltip": "{}",
        "tooltip-format": "Used: {percentage_used}%"
    },
    "group/stats": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory#ram",
            "disk",
        ]
    }
}
